<h2>User info</h2>
<%= render 'user', user: @user %>

<h2>New book</h2>
<%= render 'books/book', book: @book %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <% if book.user.image.attached? %>
          <td><%= image_tag book.user.image, size: "200x200" %></td>
        <% else %>
          <td><%= image_tag 'no_image', size: "200x200" %></td>
        <% end %>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>