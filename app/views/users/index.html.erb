<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'user', user: @user %>

      <%= render 'books/book', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <% if user.profile_image.attached? %>
                <td><%= image_tag user.profile_image, size: "40x40" %></td>
              <% else %>
                <td><%= image_tag 'no_image', size: "40x40" %></td>
              <% end %>
              <td><%= user.name %></td>
              <td><%= link_to "Show" , user_path(user.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>