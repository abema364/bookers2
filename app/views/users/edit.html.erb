<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>
  
  <%= f.submit 'Update User' %>
<% end %>