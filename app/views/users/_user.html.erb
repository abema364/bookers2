<h2>User info</h2>
<table class='table'>
  <tr>
    <% if user.image.attached? %>
      <%= image_tag user.image, size: "63x63" %>
    <% else %>
      <%= image_tag 'no_image', size: "63x63" %>
    <% end %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
</table>
<div class='row'>
  <% if current_user.id == user.id %>
    <%= link_to edit_user_path(current_user.id),  class: 'btn btn-outline-secondary btn-block' do %>
  		<i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= link_to "*", user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' %>
  <% end %>
</div>