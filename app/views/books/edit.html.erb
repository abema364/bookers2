<h2>Editing Book</h2>
<%= render 'error', model: @book %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Edit", edit_book_path %>
 | 
<%= link_to "Back", book_path %>